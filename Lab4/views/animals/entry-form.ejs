<%- include("../partials/_navbar") %>
    <%- include("../partials/_title") %>
        <div class="card col-9">
            <div class="card-body">
                <h5 class="card-title">Form</h5>
                <form action="/saveAnimal" method="POST">
                    <div class="form-group">
                        <label for="inputEmail4">Home Zoo</label>
                        <input type="text" class="form-control" name="zoo">
                    </div>
                    <div class="form-group">
                        <label for="inputPassword4">Scientific Name</label>
                        <input type="text" class="form-control" name="scientificName">
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Common Name</label>
                        <input type="text" class="form-control" name="commonName">
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Given Name</label>
                        <input type="text" class="form-control" name="givenName">
                    </div>
                    <label>Gender</label>
                    <div class="form-row">
                        <div class="form-check col-md-auto">
                            <input class="form-check-input" type="radio" name="gender"
                                value="Male" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                Male
                            </label>
                        </div>
                        <div class="form-check col">
                            <input class="form-check-input" type="radio" name="gender"
                                value="Female">
                            <label class="form-check-label" for="exampleRadios2">
                                Female
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Date of Birth</label>
                        <input type="date" class="form-control" name="dateOfBirth">
                    </div>
                    <div class="form-group">
                        <label for="inputZip">Age</label>
                        <input type="number" class="form-control" name="age">
                    </div>
                    <div class="form-group">
                        <label>Is Transportable</label><br>
                        <div class="form-check">
                            <label class="form-check-label" for="isTransportable">Available</label>
                            <input class="form-check-input" type="radio" name="isTransportable" value="true" checked>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label" for="isTransportable">Unavailable</label>
                            <input class="form-check-input" type="radio" name="isTransportable" value="false">
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Add Animal to Database</button>
                        <button type="reset" class="btn btn-primary">Reset</button>
                    </div>
                </form>
            </div>
        </div>